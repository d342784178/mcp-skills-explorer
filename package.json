{
  "name": "mcp-skills-explorer",
  "version": "1.0.0",
  "description": "MCP server that generates tools from skill.md files for Claude Desktop and other MCP clients",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "package": "npm run build",
    "package:exe": "pkg package.json"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "skill",
    "ai",
    "llm",
    "tools"
  ],
  "author": "hahaee",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "bin": {
    "mcp-skills-explorer": "./dist/index.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": ["node18-linux-x64", "node18-macos-x64", "node18-win-x64"],
    "outputPath": "release"
  }
}
